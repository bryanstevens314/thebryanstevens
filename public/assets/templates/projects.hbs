<script id="projects" type="text/x-handlebars-template">
    <div class="projects">
        <h3>Recent Projects</h3>
        <div class="d-flex flex-wrap justify-content-center">
            {{#each projects}}
                <div class="project card text-center shadow">
                    <div class="card-body" >
                        <div style="    display: flex;
                            justify-content: center;
                            height: 50px;
                            background-color: rgba(0,0,0,.3);
                            align-items: center;">
                            <h5 class="card-title">{{name}}</h5>
                        </div>
                        <p class="card-text m-4">{{description}}</p>
                    </div>
                    {{#if image.length }}
                        <div style="height: 175px;background-image: url('{{image}}');background-size: 100%;background-position: center;"></div>
                    {{/if}}
                    <div class="card-footer text-muted d-flex flex-column">
                        {{ year }}
                        <a href="{{href}}" class="btn btn-primary m-2"  target="_blank">View</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</script>
        
