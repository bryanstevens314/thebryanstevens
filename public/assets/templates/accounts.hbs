<script id="accounts" type="text/x-handlebars-template">
    <div class="accounts card card-dk">
        {{#each accounts}}
            <div class="d-flex justify-content-between">
                <h5 class="card-title">Account Info</h5>
                <p>Account # {{securitiesAccount.accountId}}</p>
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <div class="card m-3 d-flex align-items-center flex-column">
                    <h2>{{securitiesAccount.currentBalances.liquidationValue}}</h2>
                    <h2>Liquidation Value </h2>
                </div>
                <div class="card m-3 d-flex align-items-center flex-column">
                    <h2>{{securitiesAccount.currentBalances.availableFunds}}</h2>
                    <h2>Available Funds</h2>
                </div>
                <div class="card m-3 d-flex align-items-center flex-column">
                    <h2>{{securitiesAccount.currentBalances.buyingPower}}</h2>
                    <h2>Buying Power</h2>
                </div>
            </div>
        {{/each}}
    </div>
</script>
        
